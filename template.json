{
    "parameters": {
        "serverName": {
            "type": "string"
        },
        "administratorLogin": {
            "type": "string"
        },
        "administratorLoginPassword": {
            "type": "securestring"
        },
        "databaseUsername": {
            "type": "string"
        },
        "databasePassword": {
            "type": "securestring"
        },
        "databaseName": {
            "type": "string"
        },
        "webAppName": {
            "type": "string"
        },
        "hostingPlanName": {
            "type": "string"
        },
        "serverFarmResourceGroup": {
            "type": "string"
        },
        "subscriptionId": {
            "type": "string"
        }
    },
    "variables": {
      "dbServerLocation": "eastus2",
      "dbLocation": "East US",
      "dbEdition": "Basic",
      "dbCollation": "SQL_Latin1_General_CP1_CI_AS",
      "dbMaxSizeBytes": "2147483648",
      "dbRequestedServiceObjectiveId": "dd6d99bb-f193-4ec1-86f2-43d3bccbc49c",
      "dbHostingEnvironment":"",
      "dbSKU": "Standard",
      "dbSKUCode": "S2",
      "dbWorkerSize": "0"
    },
    "resources": [
        {
            "name": "[parameters('webAppName')]",
            "type": "Microsoft.Web/sites",
            "properties": {
                "siteConfig": {
                    "appSettings": [
                        {
                            "name": "APPINSIGHTS_INSTRUMENTATIONKEY",
                            "value": "[reference(concat('microsoft.insights/components/', parameters('serverName')), '2015-05-01').InstrumentationKey]"
                        },
                        {
                            "name": "XDT_MicrosoftApplicationInsights_Mode",
                            "value": "default"
                        },
                        {
                            "name": "ApplicationInsightsAgent_EXTENSION_VERSION",
                            "value": "~2"
                        }
                    ]
                },
                "name": "[parameters('webAppName')]",
                "serverFarmId": "[concat('/subscriptions/', parameters('subscriptionId'),'/resourcegroups/', parameters('serverFarmResourceGroup'), '/providers/Microsoft.Web/serverfarms/', parameters('hostingPlanName'))]",
                "hostingEnvironment": "[variables('dbHostingEnvironment')]"
            },
            "dependsOn": [
                "[concat('Microsoft.Web/serverfarms/', parameters('hostingPlanName'))]",
                "[concat('microsoft.insights/components/', parameters('serverName'))]"
            ],
            "apiVersion": "2016-03-01",
            "location": "[variables('dbLocation')]"
        },
        {
            "apiVersion": "2016-09-01",
            "name": "[parameters('hostingPlanName')]",
            "type": "Microsoft.Web/serverfarms",
            "location": "[variables('dbLocation')]",
            "properties": {
                "name": "[parameters('hostingPlanName')]",
                "workerSizeId": "[variables('dbWorkerSize')]",
                "numberOfWorkers": "1",
                "hostingEnvironment": "[variables('dbHostingEnvironment')]"
            },
            "sku": {
                "Tier": "[variables('dbSKU')]",
                "Name": "[variables('dbSKUCode')]"
            }
        },
        {
            "apiVersion": "2015-05-01",
            "name": "[parameters('serverName')]",
            "type": "microsoft.insights/components",
            "location": "[variables('dbLocation')]",
            "properties": {
                "ApplicationId": "[parameters('webAppName')]",
                "Request_Source": "IbizaWebAppExtensionCreate"
            }
        },
        {
            "name": "[parameters('serverName')]",
            "type": "Microsoft.Sql/servers",
            "location": "[variables('dbServerLocation')]",
            "apiVersion": "2014-04-01-preview",
            "properties": {
                "administratorLogin": "[parameters('administratorLogin')]",
                "administratorLoginPassword": "[parameters('administratorLoginPassword')]",
                "version": "12.0"
            },
            "resources": [
                {
                    "name": "[parameters('databaseName')]",
                    "type": "databases",
                    "location": "[variables('dbServerLocation')]",
                    "apiVersion": "2014-04-01-preview",
                    "dependsOn": [
                        "[concat('Microsoft.Sql/servers/', parameters('serverName'))]"
                    ],
                    "properties": {
                        "edition": "[variables('dbEdition')]",
                        "collation": "[variables('dbCollation')]",
                        "maxSizeBytes": "[variables('dbMaxSizeBytes')]",
                        "requestedServiceObjectiveId": "[variables('dbRequestedServiceObjectiveId')]"
                    }
                },
                {
                    "apiVersion": "2014-04-01-preview",
                    "dependsOn": [
                        "[concat('Microsoft.Sql/servers/', parameters('serverName'))]"
                    ],
                    "location": "[variables('dbServerLocation')]",
                    "name": "AllowAllWindowsAzureIps",
                    "properties": {
                        "endIpAddress": "0.0.0.0",
                        "startIpAddress": "0.0.0.0"
                    },
                    "type": "firewallrules"
                }
            ]
        }
    ],
    "$schema": "http://schema.management.azure.com/schemas/2014-04-01-preview/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0"
}